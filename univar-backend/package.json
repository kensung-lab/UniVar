{
  "name": "univar-backend",
  "version": "0.0.1",
  "description": "Unified Variant Interpretation Platform Backend",
  "author": "Hong Kong Genome Institute",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "nest build && node --max-old-space-size=8192 dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.ts",
    "test:dev": "set NODE_ENV=development&& jest --config jest.config.ts",
    "test:dev-single": "set NODE_ENV=development&& jest --config jest.config.ts jest -i",
    "test:watch": "jest --watch",
    "test:cov": "set NODE_ENV=development&& jest --coverage --config jest.config.ts",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.911.0",
    "@aws-sdk/s3-request-presigner": "^3.911.0",
    "@hokify/agenda": "^6.3.0",
    "@json2csv/plainjs": "^7.0.6",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/websockets": "^11.1.6",
    "aws-sdk-v3-nest": "^1.0.1",
    "axios": "^1.12.2",
    "cache-manager": "^7.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "etag": "^1.8.1",
    "helmet": "^8.1.0",
    "jwt-decode": "^4.0.0",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "nodemailer": "^7.0.9",
    "openid-client": "^6.8.1",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.17.0",
    "yaml": "^2.8.1",
    "zlib": "^1.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "24.8.1",
    "@types/passport-local": "^1.0.38",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tsdoc": "^0.4.0",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "semver@<7.5.2": ">=7.5.2",
      "vm2": "npm:isolated-vm",
      "sinon": ">=17.0.1",
      "mjml": "^5.0.0-alpha.6",
      "glob@<11.0.0": "^11.0.1"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "chromedriver",
      "unrs-resolver"
    ]
  }
}
